<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7a96c">

    <Button
        android:id="@+id/help_button2"
        android:layout_width="114dp"
        android:layout_height="138dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/help_icon_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/choise4Button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button7"
        android:layout_width="387dp"
        android:layout_height="139dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="236dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_orange_dark"
        android:text="CHOICE 1 "
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/choise3Button"
        app:layout_constraintEnd_toStartOf="@+id/choise2Button"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapView"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="1146dp"
        android:layout_height="354dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/choise2Button"
        android:layout_width="387dp"
        android:layout_height="139dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="116dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_orange_dark"
        android:text="CHOICE 2"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/choise4Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/choise3Button"
        android:layout_width="387dp"
        android:layout_height="139dp"
        android:layout_marginEnd="224dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/holo_orange_dark"
        android:text="CHOICE 3"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/choise4Button"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="521dp" />

    <Button
        android:id="@+id/choise4Button"
        android:layout_width="387dp"
        android:layout_height="139dp"
        android:layout_marginEnd="116dp"
        android:background="@android:color/holo_orange_dark"
        android:text="CHOICE 4"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="521dp" />
</android.support.constraint.ConstraintLayout>